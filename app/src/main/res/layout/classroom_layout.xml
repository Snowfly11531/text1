<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/kebiaobeijing">
    <include layout="@layout/title_layout"
        android:id="@+id/title_layout1"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="0.1">
      <Spinner
          android:id="@+id/classuse"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/biankuang2"/>
      <Spinner
          android:id="@+id/day"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/biankuang2"/>

      <Spinner
          android:id="@+id/kecheng"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/biankuang2"/>
   </LinearLayout>
   <LinearLayout android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1.3">
   <LinearLayout android:layout_height="match_parent"
       android:layout_width="0dp"
       android:layout_weight="0.35">
       <ListView
           android:id="@+id/loucheng"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:scrollbars="none">

       </ListView>
   </LinearLayout>
   <LinearLayout android:layout_height="match_parent"
       android:layout_width="0dp"
       android:layout_weight="1">
       <ListView
           android:id="@+id/jiaoshihao"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:dividerHeight="0dip"
           android:scrollbars="none"/>
   </LinearLayout>
      </LinearLayout>
    </LinearLayout>
    <include layout="@layout/diceng_layout"
        android:id="@+id/diceng_layout1"/>
</LinearLayout>