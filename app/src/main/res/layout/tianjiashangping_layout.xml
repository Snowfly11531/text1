<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20px">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/wupinname"
            android:background="@drawable/biankuang9"
              android:layout_width="0dp"
              android:layout_weight="2"
              android:layout_height="80px"
              android:hint="标题 物品名称"
              android:textSize="50px"
            />
        <Spinner
              android:id="@+id/zhonglei"
              android:layout_height="wrap_content"
              android:layout_width="0dp"
              android:layout_weight="1"/>
    </LinearLayout>
    <EditText
    android:id="@+id/wupinmiaoshu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textMultiLine"
    android:minLines="4"
    android:maxLines="4"
    android:maxLength="100"
    android:hint="物品描述(不少于10字，不超过100字)"
    android:textSize="50px"
    android:scrollbars="vertical"

    android:background="@drawable/biankuang8"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="40px"
            android:text="您心目中的价位是多少?"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="50px"/>
        <EditText
            android:id="@+id/nidingprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/biankuang10"
            android:textSize="50px"
            android:inputType="number"/>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_marginTop="20px"
        android:layout_height="500px"
        android:layout_width="match_parent"
        android:background="@drawable/biankuang8"
        >
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="500px">
    </LinearLayout>
</HorizontalScrollView>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20px">
    <Button
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/tianjia"
        android:onClick="show1"
        android:background="@drawable/tianjia"/>
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/clearall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear all"
            android:textSize="40px"
            android:textColor="#ff0000"
            android:layout_gravity="top"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/fabu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textSize="40px"
        android:text="确定发布"
        android:background="@color/green"/>
        </LinearLayout>
</LinearLayout>