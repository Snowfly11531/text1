<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"/>
 <LinearLayout android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="10"
     android:orientation="vertical">
     <TextView android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"/>
<TextView
    android:id="@+id/jieyongren"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="70px"
    android:background="@drawable/biankuang5"
    android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/jieyongriqi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/biankuang5"
        android:layout_marginBottom="5dp"
        android:textSize="70px"/>
    <TextView
        android:id="@+id/jieyongshijianduan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/biankuang5"
        android:layout_marginBottom="5dp"
        android:textSize="70px"/>
    <TextView
        android:id="@+id/jieyongjiaoshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/biankuang5"
        android:layout_marginBottom="5dp"
        android:textSize="70px"/>
    <EditText
        android:id="@+id/jieyongyuanying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="3"
        android:maxLength="60"
        android:hint="借用原因(不少于10字，不超过60字)"
        android:textSize="50px"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/biankuang4"/>
     <Button
         android:id="@+id/jieyongbutton"
         android:layout_width="match_parent"
         android:layout_height="100px"
         android:layout_marginTop="16dp"
         android:background="@drawable/zhuce"
         android:text="借用"
         android:textColor="#ffffff"
         android:textSize="40px"/>
     <TextView android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="5"/>
     </LinearLayout>
    <TextView android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"/>
</LinearLayout>